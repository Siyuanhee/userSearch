<title>People Found</title>
<head>
    <h1>People Found</h1>
    <h2 class="supplied-person">{{suppliedName}}</h2>
</head>
<div>
    {{#each personName}}
        <ul>
            <li>
                <a class="people-list" href="/details/{{this.id}}">{{this.firstName}} {{this.lastName}}</a>
            </li>
        </ul>
    {{/each}}
</div>
<div>
    {{#if hasErrors}}
        <ul class="error">
            <a>
                status: {{this.status}}<br>
            </a>
            {{#each errors}}
                <a>
                    {{this}}<br>
                </a>
            {{/each}}
        </ul>
    {{/if}}
</div>

<div class="no-match">
    {{#if noMatches}}
        <p class="not-found">We're sorry, but no results were found for {{personName}}.</p>
    {{/if}}
</div>
<a href="/">Make another search</a>